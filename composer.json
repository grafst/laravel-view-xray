{
    "name": "beyondcode/laravel-view-xray",
    "description": "Take a look into your Laravel views.",
    "keywords": [
        "beyondcode",
        "laravel-view-xray"
    ],
    "homepage": "https://github.com/beyondcode/laravel-view-xray",
    "license": "MIT",
    "authors": [
        {
            "name": "Marcel Pociot",
            "email": "marcel@beyondco.de",
            "homepage": "https://beyondcode.de",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.0",
        "illuminate/support": "*"
    },
    "require-dev": {
        "orchestra/testbench": "^8.0",
        "phpunit/phpunit": "^10.0",
        "spatie/phpunit-snapshot-assertions": "^5.0"
    },
    "autoload": {
        "psr-4": {
            "BeyondCode\\ViewXray\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "BeyondCode\\ViewXray\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage"

    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "BeyondCode\\ViewXray\\ViewXrayServiceProvider"
            ]
        }
    }
}
